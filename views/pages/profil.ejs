<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/main.css" />
    <title>Votre profil</title>
  </head>
  <body>
    <%- include("../partials/navbar.ejs") %> <% const joinDate = new
    Date(user.createdAt); %> <% const lastActivityDate = new
    Date(stats.lastActivityAt || user.createdAt); %> <% const repliesCount =
    Math.max((stats.totalPosts || 0) - (stats.totalThreads || 0), 0); %>
    <main class="page-shell">
      <section class="u-main-container profile-hero">
        <div class="surface-card profile-identity">
          <span class="pill">Profil membre</span>
          <h1 class="profile-identity__title"><%= user.userName %></h1>
          <p class="profile-identity__subtitle">
            Membre depuis le
            <strong>
